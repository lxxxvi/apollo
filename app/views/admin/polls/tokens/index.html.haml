= render 'admin/polls/title_and_subnavigation', poll: @poll

.tokens-section
  .my-16
    .flex
      .w-full
        .flex.border-0.border-gray-200.border-b
          .text-gray-600{ class: 'w-2/3'}
            %h2 Tokens
          .relative{ class: 'w-1/3'}
            - if policy(@poll).update?
              = link_to 'Add tokens', new_admin_poll_token_path(@poll), class: 'apollo-pink-link absolute bottom-0 right-0'
        .flex.flex-wrap.my-8
          - @poll.tokens.each do |token|
            .text-center.border.border-gray-200.rounded.my-2{ class: 'w-full sm:w-1/2 md:w-1/4' }
              .m-6.text-xs.text-gray-600
                = token.custom_id

