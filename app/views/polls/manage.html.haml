.flex
  .mb-10= link_to 'Back to poll', poll_path(@poll), class: 'shy-link'

%h1.mb-10 Manage poll

%h2.border-0.border-gray-200.border-b.text-gray-600 Base data
.flex.pt-5
  .text-gray-500{ class: 'w-1/3' }
  %div{ class: 'w-2/3' }= render 'form', form: PollForm.new(@poll, @poll.slice(:title, :description))

- if @poll.deletable?
  %h2.border-0.border-gray-200.border-b.text-red-700 Delete
  .flex.pt-5
    .text-gray-500{ class: 'w-1/3' }
      Be aware that this action cannot be undone.
    %div.pt-5{ class: 'w-2/3' }= render 'polls/deletion/form', form: PollDeletionForm.new(@poll)

